<div class="modal fade" id="divCreate" role="dialog">
    <div class="modal-dialog" role="document" style="width: 450px;">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" style="float: left">Novo Usuário</h4>
                <button class="btn btn-default" data-dismiss="modal" style="width: 35px; float: right;">x</button>
            </div>
            <div class="modal-body">
                <p>Nome: <input class="form-control txtNome" style="width: 100%;" /></p>
                <p>Data de Nascimento: <input type="date" min="1900-01-01" max="@DateTime.Now.ToString("d")" placeholder="0000-00-00" class="form-control txtDataNascimento" style="width: 100%;" /></p>
                <p style="text-align: right;"><label id="btnSalvarUsuario" type="button" class="btn btn-primary">Salvar</label></p>
            </div>
        </div>
    </div>    
</div>
